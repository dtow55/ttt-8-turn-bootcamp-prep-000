#!/usr/bin/env ruby
require_relative '../lib/turn'

board = [" ", " ", " ", " ", " ", " ", " ", " ", " ", ]

puts "Welcome to Tic Tac Toe!"
display_board(board)
puts "Where would you like to go?"
index = input_to_index(gets.strip)
if valid_move?(index)
  move(board, index)
else
  puts "That's not a valid move."
end
display_board(board)
